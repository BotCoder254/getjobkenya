# Server Configuration
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/ecommerce
JWT_SECRET=your-super-secret-jwt-key-123
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company Name

# Payment Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_CURRENCY=USD

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/mpesa-callback

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
AWS_BUCKET_NAME=your-bucket-name

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Company Information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Your Street, Your City, ST 12345
COMPANY_PHONE=+1234567890
COMPANY_EMAIL=contact@yourdomain.com
COMPANY_WEBSITE=https://yourdomain.com

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
PASSWORD_RESET_TOKEN_EXPIRES=3600000

# Shipping Configuration
DEFAULT_SHIPPING_COST=10
FREE_SHIPPING_THRESHOLD=100
SHIPPING_API_KEY=your-shipping-api-key

# Tax Configuration
DEFAULT_TAX_RATE=0.16
TAX_API_KEY=your-tax-api-key

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error Reporting
SENTRY_DSN=your-sentry-dsn

# API Keys for External Services
CURRENCY_CONVERTER_API_KEY=your-currency-api-key
GEOCODING_API_KEY=your-geocoding-api-key
WEATHER_API_KEY=your-weather-api-key

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_GUEST_CHECKOUT=true
ENABLE_WISHLISTS=true
ENABLE_REVIEWS=true
ENABLE_NOTIFICATIONS=true

# Cache Configuration
CACHE_TTL=3600
PRODUCT_CACHE_TTL=7200
USER_CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_TOKEN=your-maintenance-token

# WebSocket Configuration
WS_PORT=5001